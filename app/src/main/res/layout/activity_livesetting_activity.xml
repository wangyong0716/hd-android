<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_act"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#f3f3f0"
    android:orientation="vertical" >

    <fm.dian.hdui.view.pullllayout.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f0">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#f3f3f0"
            android:orientation="vertical" >


        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="已经创建5个房间，最多可创建6个房间"
            android:textSize="12sp" />

        <ListView
            android:id="@+id/lv_member"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:cacheColorHint="@color/color_transparency"
            android:choiceMode="singleChoice"
            android:divider="@color/color_listview_divider"
            android:dividerHeight="1px"
            android:drawSelectorOnTop="true"
            android:listSelector="@color/color_transparency"
            android:fadingEdge="none"
            android:gravity="center"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="none" />


        </LinearLayout>
    </fm.dian.hdui.view.pullllayout.PullRefreshLayout>

</LinearLayout>