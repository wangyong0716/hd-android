<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HDRoomActivity" 
    android:background="#F3F3F0"
    android:id="@+id/layout">
    
    <RelativeLayout 
        android:id="@+id/bar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/action_bar_bg_color">
	    <ImageButton
	        android:id="@+id/back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true" 
	        android:background="@drawable/btn_back_bg_selector" 
	        android:onClick="back"/>
	    
	    <View 
	        android:id="@+id/divider"
	        android:layout_width="1dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/activity_action_bar_divider_padding"
	        android:layout_marginBottom="@dimen/activity_action_bar_divider_padding"
	        android:layout_marginRight="@dimen/activity_common_padding"
	        android:background="@color/action_bar_vertical_divider"
	        android:layout_toRightOf="@id/back"
	        android:layout_alignTop="@id/back"
	        android:layout_alignBottom="@id/back"
	        />
	    
	    <ImageButton
	        android:id="@+id/editBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" 
	        android:background="@drawable/room_more_btn_bg_selector" 
	        android:onClick="edit"
	        android:visibility="invisible"
	        />
	    
	    <TextView
            android:id="@+id/roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="直播密码"
            android:textColor="@color/color_white"
            android:textSize="@dimen/room_name_size" 
	        android:layout_toLeftOf="@id/editBtn"
	        android:layout_toRightOf="@id/divider"
	        android:layout_alignTop="@id/back"
	        android:layout_alignBottom="@id/back"
	        android:singleLine="true"
	        android:ellipsize="end"
	        />
	    
    </RelativeLayout>

    <EditText
        android:id="@+id/passwdView"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bar"
        android:inputType="number"
        android:background="#00000000"
        android:textColor="#00000000"
         >
        <requestFocus />
    </EditText>
    
    <TextView
		android:id="@+id/txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bar"
		android:text="请输入直播密码"
		android:textColor="#474747"
		android:textSize="14sp" 
		android:layout_marginTop="98dp"
		android:layout_centerHorizontal="true"
		/>
	
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="34dp"
		android:orientation="horizontal"
		android:layout_below="@+id/txt"
		android:gravity="center"
		android:layout_marginTop="26dp"
		>
        <View 
            android:id="@+id/v1"
			android:layout_width="15dp"
			android:layout_height="3dp"
			android:background="#474747"
			/>
        <View 
            android:id="@+id/v2"
			android:layout_width="15dp"
			android:layout_height="3dp"
			android:background="#474747"
			android:layout_marginLeft="25dp"
			/>
        <View 
            android:id="@+id/v3"
			android:layout_width="15dp"
			android:layout_height="3dp"
			android:background="#474747"
			android:layout_marginLeft="25dp"
			/>
        <View 
            android:id="@+id/v4"
			android:layout_width="15dp"
			android:layout_height="3dp"
			android:background="#474747"
			android:layout_marginLeft="25dp"
			/>
        
    </LinearLayout>
	
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="34dp"
		android:orientation="horizontal"
		android:layout_below="@+id/txt"
		android:gravity="center"
		android:layout_marginTop="26dp"
		>
        <TextView 
            android:id="@+id/p1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="1"
			android:textColor="#474747"
			android:textSize="26sp" 
			/>
        <TextView 
            android:id="@+id/p2"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="2"
			android:textColor="#474747"
			android:textSize="26sp" 
			android:layout_marginLeft="25dp"
			/>
        <TextView 
            android:id="@+id/p3"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="3"
			android:textColor="#474747"
			android:textSize="26sp" 
			android:layout_marginLeft="25dp"
			/>
        <TextView 
            android:id="@+id/p4"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="4"
			android:textColor="#474747"
			android:textSize="26sp" 
			android:layout_marginLeft="25dp"
			/>
        
    </LinearLayout>
    
</RelativeLayout>