<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab3_item_bg_selector"
    android:orientation="vertical"
    android:paddingTop="15dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_vedio_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dip"
            android:textColor="@color/base_activity_seeding_bar_text_color"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp"
            android:text="青山绿水" />

        <TextView
            android:id="@+id/tv_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab1_list_item_room_describe_text_color"
            android:layout_alignParentRight="true"
            android:text="2015年00月11日" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab1_list_item_room_describe_text_color"
            android:drawableLeft="@drawable/icon_blackborad_play_count"
            android:text="0" />

        <TextView
            android:id="@+id/tv_vedio_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab1_list_item_room_describe_text_color"
            android:drawableLeft="@drawable/icon_blackborad_vedio_length"
            android:layout_marginLeft="15dip"
            android:text="00:02" />
    </LinearLayout>

    <TextView
            android:id="@+id/tv_vedio_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:visibility="gone"/>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dip"
        android:background="#64000000" />

</LinearLayout>